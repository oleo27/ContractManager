@model ContractManager.Models.Dyspozycja

<h2>Dodaj nową dyspozycję</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NumerUmowy"></label>
        <input asp-for="NumerUmowy" class="form-control" />
        <span asp-validation-for="NumerUmowy" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataDyspozycji"></label>
        <input asp-for="DataDyspozycji" type="date" class="form-control" />
        <span asp-validation-for="DataDyspozycji" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Uzytkownik"></label>
        <input asp-for="Uzytkownik" class="form-control" />
        <span asp-validation-for="Uzytkownik" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
